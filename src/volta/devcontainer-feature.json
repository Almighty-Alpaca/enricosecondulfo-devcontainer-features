{
    "name": "Volta",
    "id": "volta",
    "version": "1.0.0",
    "description": "Installs Volta, the hassle-free JavaScript tool manager",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Select or enter a version."
        }
    },
    "containerEnv": {
        "VOLTA_HOME": "~/.volta",
        "PATH": "/opt/volta/bin/:$VOLTA_HOME/bin:$PATH"
    }
}
